<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MAUIWeatherApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MAUIWeatherApp"
    Shell.FlyoutBehavior="Flyout"
    Shell.FlyoutHeight="500"
    Shell.FlyoutBackground="LightBlue"
    Shell.FlyoutWidth="900"
    Shell.NavBarHasShadow="True"
    Shell.PresentationMode="Animated"
    Shell.TitleColor="Turquoise"
    Title="MAUIWeatherApp">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Side"
        ContentTemplate="{DataTemplate local:MVVM.Views.WeatherView}"
        Route="WeatherView" />

</Shell>
